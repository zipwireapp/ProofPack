{
    "test_cases": [
        {
            "id": "basic-message",
            "description": "Basic message payload for JWS envelope",
            "payload": {
                "message": "Hello from .NET!",
                "timestamp": "2024-01-01T00:00:00Z",
                "layer": 1,
                "platform": "dotnet"
            },
            "expected_signature_algorithm": "RS256",
            "expected_header": {
                "alg": "RS256",
                "typ": "JWT"
            }
        },
        {
            "id": "complex-message",
            "description": "Complex message with additional fields",
            "payload": {
